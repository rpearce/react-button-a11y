{
  "name": "react-button-a11y",
  "version": "3.0.0",
  "description": "Make non-button elements accessible in React",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:rpearce/react-button-a11y.git"
  },
  "homepage": "https://github.com/rpearce/react-button-a11y",
  "bugs": "https://github.com/rpearce/react-button-a11y/issues",
  "author": "Robert Pearce <me@robertwpearce.com>",
  "contributors": [
    "Robert Pearce <me@robertwpearce.com> (https://robertwpearce.com)"
  ],
  "license": "ISC",
  "keywords": [
    "accessibility",
    "a11y",
    "react",
    "react-component"
  ],
  "tags": [
    "accessibility",
    "a11y",
    "react",
    "react-component"
  ],
  "files": [
    "AUTHORS",
    "LICENSE",
    "README.md",
    "src/"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:js && npm run build:docs",
    "build:docs": "browserify example/app.js -o docs/app.js -t [ babelify ]",
    "build:js": "rm -rf src && babel source --out-dir src",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "lint": "eslint --ext .js .",
    "prepublishOnly": "npm run lint && npm run build",
    "test": "npm run lint && npm run build && jest --coverage"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "all-contributors-cli": "^6.1.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.1.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "coveralls": "^3.0.2",
    "eslint": "^5.13.0",
    "eslint-plugin-jest": "^22.2.2",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "1.0.1",
    "jest": "^24.1.0",
    "jest-dom": "^3.0.2",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-testing-library": "^5.5.4"
  },
  "peerDependencies": {
    "react": ">= 16.8",
    "react-dom": ">= 16.8"
  },
  "dependencies": {
    "react-with-forwarded-ref": "^0.1.0"
  }
}
